@model mvc.Models.Teacher

<h1>Modifier un enseignant</h1>

<form asp-action="Edit" method="post">
    <!-- Champ caché pour l'ID -->
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Lastname" class="form-label">Nom</label>
        <input asp-for="Lastname" class="form-control" />
        <span asp-validation-for="Lastname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Firstname" class="form-label">Prénom</label>
        <input asp-for="Firstname" class="form-control" />
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PersonalWebSite" class="form-label">Site Web Personnel</label>
        <input asp-for="PersonalWebSite" class="form-control" />
        <span asp-validation-for="PersonalWebSite" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Sauvegarder</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
